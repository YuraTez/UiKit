extends pug/base

append vars
    - title = 'UiKit'

block content
    style.
        .elem {
            margin-bottom: 80px;
        }

        .elem .row {
            display: flex;
        }
        .col{
            display: flex;
        }
        .button .row {
            max-width: 588px;
            margin: 0 0 16px;
        }

        .button .row .col {
            max-width: 160px;
            width: 100%;
            margin: 0 10px;
        }

        .input .row {
            max-width: 730px;
            margin: 0 0 37px;
        }

        .input .row .col, .select .row .col {
            max-width: 350px;
            width: 100%;
            margin: 5px;
        }

        .checkbox .row {
            max-width: 350px;
        }

        .select .row {
            max-width: 730px;
        }

        .tooltip .icon {
            color: #212429;
            fill: transparent;
            width: 24px;
            height: 24px;
        }

        .tooltip .icon svg {
            width: 100%;
            height: 100%;
        }

        .links .row {
            max-width: 500px;
            margin-bottom: 20px;
        }

        .links .row .col {
            margin-right: 78px;
        }

        .nav .row {
            max-width: 250px;
            align-items: center;
        }

        .block-popup .row {
            justify-content: flex-start;
        }

        .block-popup .row .col {
            width: auto;
            max-width: none;
            margin-left: 0;
            margin-right: 30px;
        }
        .logo{
            margin-top: 150px;
        }
        .logo-img {
            width: 144px;
            height: 136px;
        }
        .description-block{
            width: 350px;
        }
        .content-block{
            display: flex;
            align-items: flex-end;
        }
        .square-color{
            width: 120px;
            height: 120px;
            margin-right: 25px;
            border-radius: 8px;
        }
        .rectangle-color{
            width: 120px;
            height: 54px;
        }
        .rectangle{
            margin-top: 95px;
        }
        .typography-elem-name{
            display: flex;
            align-items: center;
            width: 30px;
            margin-right: 84px;
        }
        .typography-content-item{
            margin-bottom: 30px ;
        }



    .wrapper
        .logo.elem
            .row(style="justify-content:flex-start")
                .description-block
                    h1 Ui Kit
                .content-block
                    img.logo-img(src="images/fox-project/logo/Logo.svg")
        .colors.elem
            .row
                .description-block
                    h3 Цвета
                .content-block
                    .col
                        .square-color.square-orange
                    .col
                        .square-color.square-orange-lite
                    .col
                        .square-color.square-yellow
                    .col
                        .square-color.square-peach
                    .col
                        .square-color.square-green
            .row
                .description-block
                .content-block.rectangle
                    .col
                        .rectangle-color.rectangle-black
                    .col
                        .rectangle-color.rectangle-gray
                    .col
                        .rectangle-color.rectangle-medium-grey
                    .col
                        .rectangle-color.rectangle-light-grey
                    .col
                        .rectangle-color.rectangle-white
        .typography.elem
            .row
                .description-block
                    h3 Типографика
                .typography-content-block
                    .col.typography-content-item
                        .typography-elem-name h1
                        .typography-elem-item
                            h1 Hayes Valley Studio
                    .row
                        .typography-content-item
                            .col
                                .typography-elem-name h2
                                .typography-elem-item
                                    h2 Hayes Valley Studio
                    .row
                        .typography-content-item
                            .col
                                .typography-elem-name h3
                                .typography-elem-item
                                    h3 Hayes Valley Studio
                    .row
                        .typography-content-item
                            .col
                                .typography-elem-name h4
                                .typography-elem-item
                                    h4 Hayes Valley Studio
                    .row
                        .typography-content-item
                            .col
                                .typography-elem-name h5
                                .typography-elem-item
                                    h5 Hayes Valley Studio
                    .row
                        .typography-content-item
                            .col
                                .typography-elem-name h6
                                .typography-elem-item
                                    h6 Hayes Valley Studio
                    .row
                        .typography-content-item
                            .col
                                .typography-elem-name p b
                                .typography-elem-item
                                   p
                                    b Hayes Valley Studio
                    .row
                        .typography-content-item
                            .col
                                .typography-elem-name p
                                .typography-elem-item
                                    p Hayes Valley Studio
                    .row
                        .typography-content-item
                            .col
                                .typography-elem-name small
                                .typography-elem-item
                                    small Hayes Valley Studio
        .button-block.elem
            .row
                .description-block
                    h3 Кнопки
                .content-button-block
                    .row
                        .col
                            h6 DEFAULT
                        .col
                            a.btn.btn--orange(href='#') Найти
                        .col
                            a.btn.btn--person.person-active(href='#') × 5 гостей
                        .col
                            a.btn.btn--reservation(href='#') Забронировать
                    .row
                        .col
                            h6 HOVER
                        .col
                            a.btn.btn--orange.orange-hover(href='#') Найти
                        .col
                            a.btn.btn--person.person-hover.person-active(href='#') × 5 гостей
                        .col
                            a.btn.btn--reservation(href='#') Забронировать
                    .row
                        .col
                            h6 DISABLED
                        .col
                            a.btn.btn--orange.disabled(href='#') Найти
                        .col
                            a.btn.btn--person.disabled(href='#') Выбрать гостей
                        .col
                            a.btn.btn--reservation.disabled(href='#') Забронировать
                    .content-button-block-mini
                        .row
                            .col
                                h6
                            .col
                                a.btn.btn--orange-min(href='#') Найти
                            .col
                                a.btn.btn--person-min.person-active(href='#') × 5 гостей
                            .col
                                a.btn.btn--reservation-min(href='#') Забронировать
                        .row
                            .col
                                h6
                            .col
                                a.btn.btn--orange-min.orange-hover(href='#') Найти
                            .col
                                a.btn.btn--person-min.person-hover.person-active(href='#') × 5 гостей
                            .col
                                a.btn.btn--reservation-min(href='#') Забронировать
                        .row
                            .col
                                h6
                            .col
                                a.btn.btn--orange-min.disabled(href='#') Найти
                            .col
                                a.btn.btn--person-min.disabled(href='#') Выбрать гостей
                            .col
                                a.btn.btn--reservation-min.disabled(href='#') Забронировать



























        .input.elem
            .row
                .col
                    label.form-field
                        input.js-input.js-input-mask.form-field__input(type='text', data-mask='999 999 999')
                        span.form-field__label Placeholder
                        span.form-field__icon
                            +svg('alert')
                .col
                    label.form-field.form-field--error
                        input.js-input.form-field__input(type='text', value='Error')
                        //span.form-field__label Error
                        span.form-field__icon
                            +svg('alert')
            .row
                .col
                    label.form-field.disabled
                        input.js-input.form-field__input(type='text')
                        span.form-field__label Disabled
                        span.form-field__icon
                            +svg('alert')








        .select.elem
            .row
                .col
                    .form-select
                        span.form-select__label Select
                        select.js-select(name='state')
                            option(value='MA') Magnetic
                            option(value='GY') Gravity
                            option(value='ME') Mechanical Mechanical
                            option(value='EL') Electronic
                            option(value='EL') Electronic
                .col
                    .form-select
                        span.form-select__label Select Input
                        select.js-select-input(name='state')
                            option(value='MA') Magnetic
                            option(value='GY') Gravity
                            option(value='ME') Mechanical
                            option(value='EL') Electronic
                            option(value='EL') Electronic
            .row
                .col
                    .form-select.disabled
                        span.form-select__label Select
                        select.js-select(name='state')
                            option(value='MA') Disabled

        .checkbox.elem
            .row
                .col
                    label.form-checkbox
                        input.form-checkbox__input(type='checkbox')
                        span.form-checkbox__checkmark
                        span.form-checkbox__text Default
                .col
                    label.form-radio
                        input.form-radio__input(type='radio' name='account')
                        span.form-radio__checkmark
                        span.form-radio__text Default
            .row
                .col
                    label.form-checkbox.disabled
                        input.form-checkbox__input(type='checkbox')
                        span.form-checkbox__checkmark
                        span.form-checkbox__text Default
                .col
                    label.form-radio.disabled
                        input.form-radio__input(type='radio' name='account')
                        span.form-radio__checkmark
                        span.form-radio__text Default

        .tooltip.elem
            .row
                .col
                    .js-tooltip(title='Helper Text Helper Text Helper Text Text Text')
                        .icon
                            +svg('question')

        .tag.elem
            .row
                .col
                    .tag
                        a.tag__item(href='#!'): span 1 of 12
                        a.tag__item(href='#!'): span Favorite
                        a.tag__item(href='#!'): span Category
                        a.tag__item.tag__item--icon(href='#!')
                            +svg('share')
                            span SHared

        .links.elem
            .row
                .col
                    a.link.link--arrow.link--blue(href='#!')
                        span Смотреть все
                        +svg('arrow')

        .filters.elem
            .row
                .col
                    .form-filter
                        .form-filter__label Сортировать
                        select.js-select-filter(name='sort')
                            option(value='fav') Популярные
                            option(value='price') По стоимости
                            option(value='low_price') Цена убывает
                            option(value='high_price') Цена возрастает

        .element.elem
            .row
                .col
                    .counter
                        span.counter__item.js-sub
                        span.counter__item
                            span.js-counter-text 0
                            input.js-counter-input(title='number', hidden, value='0')
                        span.counter__item.js-add

        .nav.elem
            .row
                .col
                    .close-icon
                        +svg('close')
                .col
                    .navigation-arrows
                        .navigation-arrows__item
                            +svg('arrow')
                        .navigation-arrows__item
                            +svg('arrow')

        .buttons.elem
            .row
                .col
                    .btn-group
                        a.btn-group__item.btn-group__item--active(href='#!') Мероприятия 21
                        a.btn-group__item(href='#!') Мероприятия 22
                        a.btn-group__item(href='#!') Мероприятия 23

        include pug/particles/form-example

        .button.elem.block-popup
            h2 Пример открытия попапов
            .row
                .col
                    a.btn.btn--blue.js-popup-link(data-link="feedback") Попап с формой
                .col
                    a.btn.btn--blue.js-popup-link(data-link="ajax-content" href="ajax-content-example.html" data-href="ajax-content-example.html") Ajax-попап
                .col
                    a.btn.btn--blue.js-popup-link(data-link="video" data-src="https://www.youtube.com/embed/Euv2ramIrv4?autoplay=1") Попапа с видео



